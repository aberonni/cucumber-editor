{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "args": [],
    "showOutput": "always",
    "problemMatcher": "$tsc",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        { 
            "taskName": "build",
            "args": ["run", "tsc"]
        },
        { 
            "taskName": "watch",
            "args": ["run", "tsc:w"]
        }
    ]
}